{
  "variables": {
    "ansible_host": "",
    "ansible_connection": "docker",
    "base_image": "",
    "build_date": "",
    "docker_username": "",
    "docker_changes": "",
    "image_name": "",
    "name": "var",
    "package_name": "",
    "package_version": ""
  },
  "builders": [
    {
      "type": "docker",
      "image": "{{user `base_image`}}",
      "commit": "true",
      "exec_user": "root",
      "run_command": [
        "-d",
        "-i",
        "-t",
        "--name",
        "{{user `ansible_host`}}",
        "{{.Image}}",
        "/bin/bash"
      ],
      "changes": "{{user `docker_changes`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "./../scripts/install_basics.sh"
      ]
    },
    {
      "type": "shell-local",
      "command": "ansible-galaxy install --force -v --roles-path='./../ansible/roles' --role-file='./../ansible/requirements.yml'"
    },
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "./../ansible/playbook.yml",
      "extra_arguments": [
        "--extra-vars",
        "ansible_host={{user `ansible_host`}} ansible_connection={{user `ansible_connection`}}"
      ]
    },
    {
      "type": "file",
      "source": "./../files/docker-entrypoint.sh",
      "destination": "/usr/local/bin/docker-entrypoint"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{ user `docker_username` }}/{{user `package_name`}}",
        "tag": "{{user `package_version`}}-{{user `image_name`}}-{{user `build_date`}}"
      },
      {
        "type": "docker-tag",
        "repository": "{{ user `docker_username` }}/{{user `package_name`}}",
        "tag": "{{user `package_version`}}-{{user `image_name`}}"
      },
      {
        "type": "manifest",
        "output": "manifest.json",
        "strip_path": true
      }
    ]
  ]
}